@model IEnumerable<DoAnCoSo.Models.KHOA>

@{
    Layout = null;
}
@using (Html.BeginForm("SearchDoctor", "Booking"))
{
    <div class="container">
        <div class="contact1">
            <select class="form-control input-lg" name="specialist">
                @foreach (var item in Model)
                {
                    <option value="@item.MAKHOA">@item.TENKHOA</option>
                }
            </select>
        </div>

        <div align="center">
            <input class="btn btn-outline-primary" type="submit" value="Tìm kiếm" style="margin-top:20px">
        </div>
    </div>
}

