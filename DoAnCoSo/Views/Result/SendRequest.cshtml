@model IEnumerable<DoAnCoSo.Models.PHIEUHEN>
@{
    ViewBag.Title = "SendRequest";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@foreach (var item in Model)
{
    <div class="container" style="margin-top:150px">
        <h1 align="center" style="color:dodgerblue">XEM KẾT QUẢ TRỰC TUYẾN</h1>
        <p style="margin-top:30px"><em>Thông tin bệnh nhân:</em></p>
        @Html.Action("UserInfo", "Result", new { id = item.MAPHIEU })
        <p style="margin-top:30px"><em>Kết quả khám bệnh:</em></p>
        @Html.Action("Detail", "Result", new { id = item.MAPHIEU })
        <p style="margin-top:30px"><em>Ảnh xét nghiệm đính kèm:</em></p>
        @Html.Action("LoadImage", "Result", new { id = item.MAPHIEU })
    </div>
}


