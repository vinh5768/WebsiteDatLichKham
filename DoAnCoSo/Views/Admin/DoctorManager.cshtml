@using DoAnCoSo.Models
@using PagedList.Mvc;
@model PagedList.PagedList<BACSI>


@{
    ViewBag.Title = "DoctorManager";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    @Html.ActionLink("Thêm Bác Sĩ", "CreateDoctor")
</p>
<div class="alltopic">
    <table class="table">
        <tr>
            <th>
                Mã bác sĩ
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.HOTEN)*@
                Họ tên
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NGAYSINH)*@
                Năm sinh
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.SDT)*@
                Số điện thoại
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DIACHI)*@
                Địachỉ
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.GIOITINH)*@
                Giới tính
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.HINHANH)*@
                HINHANH
            </th>         
            <th>
                @*@Html.DisplayNameFor(model => model.GIAKHAM)*@
                GIAKHAM
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MABS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOTEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYSINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIACHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GIOITINH)
            </td>
            <td>
                @*<img src="@Url.Content("~/Images/"+  item.HINHANH)" width="120" />*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GIAKHAM)
            </td>
            <td>
                @Html.ActionLink("Sửa", "EditDoctor", new { id = item.MABS }) |
                @Html.ActionLink("Xóa", "DeleteDoctor", new { id = item.MABS })
            </td>
        </tr>
        }

    </table>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("DoctorManager", new { page = page }))
    </div>
    <style>
        .MenuTrang li{
            display:inline;
        }
    </style>
    </div>
